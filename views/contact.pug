extends layout

block content
  h1.title Contact
  form(method="post", action="contact/send")
    h1.title #{contact}
    .form-group
      label Name
      input.form-control(type="text", name="name", placeholder="Enter Name")
    .form-group
      label Email
      input.form-control(type="email", name="email", placeholder="nobody@example.com")
    .form-group
      label Message
      textarea.form-control(name="message", placeholder="Enter message here")
    button.btn.btn-primary(type="submit") Submit
